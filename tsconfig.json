{
    "compilerOptions": {
      "target": "ES2015",
      "module": "commonjs",
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "lib": [
        "esnext",
        "esnext.asynciterable",
        "dom"
      ],
      "esModuleInterop": true,
      "allowJs": true,
      "sourceMap": true,
      "strict": true,
      "noEmit": true,
      "baseUrl": ".",
      "paths": {
        "~/*": [
          "./*"
        ],
        "@/*": [
          "./*"
        ]
      },
    },
    "exclude": [
      "node_modules"
    ]
  }